{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "allowJs": false,
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true
  },
  "exclude": ["node_modules", "dist"]
}
